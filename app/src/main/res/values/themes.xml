<resources >
    <!-- Base application theme. -->
    <style name="Theme.ResidueixAppMobil" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blau_menu</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
                <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blau_menu</item>
        <item name="colorSecondaryVariant">@color/groc_menu</item>
        <item name="colorOnSecondary">@color/verd_menu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Tema per definir el splashscreen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- imatge a mostrar al splashcreen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_imatge_marca_blanc</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.ResidueixAppMobil</item>
    </style>
</resources>